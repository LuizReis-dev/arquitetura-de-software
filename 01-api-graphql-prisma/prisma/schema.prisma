generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Movie {
  id        Int       @id @default(autoincrement())
  title     String
  year      Int
  actors    Actor[]
  genres    Genre[]

  @@map("tb_movies")
}

model Actor {
  id        Int       @id @default(autoincrement())
  name      String
  birthdate DateTime
  movies    Movie[]

  @@map("tb_actors")
}

model Genre {
  id      Int      @id @default(autoincrement())
  name    String
  movies  Movie[]

  @@map("tb_genres")
}